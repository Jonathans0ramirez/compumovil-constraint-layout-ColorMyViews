<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/margin_wide"
            android:layout_marginTop="@dimen/margin_wide"
            android:layout_marginEnd="@dimen/margin_wide" android:text="@string/box_one"
            android:id="@+id/box_one_text" style="@style/whiteBox"/>
    <TextView
            android:text="@string/box_two"
            android:layout_width="130dp"
            android:layout_height="130dp" android:id="@+id/box_two_text"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/box_one_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" style="@style/whiteBox"/>
    <TextView
            android:text="@string/box_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/box_three_text"
            style="@style/whiteBox"
            app:layout_constraintBottom_toTopOf="@+id/box_four_text"
            app:layout_constraintTop_toTopOf="@+id/box_two_text"
            android:layout_marginStart="@dimen/margin_wide" app:layout_constraintStart_toEndOf="@+id/box_two_text"
            android:layout_marginEnd="@dimen/margin_wide" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/box_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/box_four_text"
            style="@style/whiteBox"
            app:layout_constraintTop_toBottomOf="@+id/box_three_text"
            app:layout_constraintBottom_toTopOf="@+id/box_five_text" android:layout_marginStart="@dimen/margin_wide"
            app:layout_constraintStart_toEndOf="@+id/box_two_text" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_wide" android:layout_marginTop="@dimen/margin_wide"
            android:layout_marginBottom="@dimen/margin_wide"/>
    <TextView
            android:text="@string/box_five"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/box_five_text"
            style="@style/whiteBox"
            app:layout_constraintBottom_toBottomOf="@+id/box_two_text"
            app:layout_constraintTop_toBottomOf="@+id/box_four_text"
            android:layout_marginStart="@dimen/margin_wide"
            app:layout_constraintStart_toEndOf="@+id/box_two_text" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/margin_wide"
            android:layout_marginEnd="@dimen/margin_wide" android:text="@string/box_six"
            android:id="@+id/box_six_text" style="@style/whiteBox" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="@dimen/margin_wide" app:layout_constraintTop_toBottomOf="@+id/box_five_text"/>
    <TextView
            android:text="@string/box_seven"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/box_seven_text"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/whiteBox"
            android:layout_marginTop="@dimen/margin_wide" app:layout_constraintTop_toBottomOf="@+id/box_six_text"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_wide" android:layout_marginStart="@dimen/margin_wide"
            android:layout_marginEnd="@dimen/margin_wide"/>

</androidx.constraintlayout.widget.ConstraintLayout>